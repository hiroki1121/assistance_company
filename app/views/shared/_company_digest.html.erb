<%# 投稿内容がない場合 %>
<%= link_to "#" do %>
  <% if @posts.empty? %>
    <div class="company-list">
      <div class="company-content-img">
        <%= image_tag "company-image.jpg", class: "company-img" %>
      </div>
      <div class="company-info-contents">
        <ul class="company-info-items">
          <li class="company-info-item">評価</li>
          <li class="company-info-item">会社名</li>
          <li class="company-info-item">所在地</li>
          <li class="company-info-item">会社概要</li>
        </ul>
        <ul class="company-info-content">
          <li class="input-content"><span class="fa fa-star" id="star"></span>5.0</li>
          <li class="input-content">HOGE株式会社</li>
          <li class="input-content">東京都</li>
          <li class="input-content">Webサービス設計会社です。大手企業からの案件多数引き受けております！</li>
        </ul>
      </div>
    </div>
  <% end %>
<% end %>
<%# 投稿内容がある場合 %>
<%= link_to favorite_path(post.id) do %>
  <div class="company-list">
    <div class="company-content-img">
      <%= image_tag post.image, class: "company-img" %>
    </div>
    <div class="company-info-contents">
      <ul class="company-info-items">
        <li class="company-info-item">評価</li>
        <li class="company-info-item">会社名</li>
        <li class="company-info-item">所在地</li>
        <li class="company-info-item">会社概要</li>
      </ul>
      <ul class="company-info-content">
        <li class="input-content"><span class="fa fa-star" id="star"></span>3.4(仮)</li>
        <li class="input-content"><%= post.company_name %></li>
        <li class="input-content"><%= post.prefecture.name %></li>
        <li class="input-content"><%= post.business_detail %></li>
      </ul>
    </div>
  </div>
<% end %>
